<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <style>
    body {
      text-align: center;
      font-family: Arial, sans-serif;
    }

    h1 {
      margin-top: 50px;
    }

    .button {
      display: inline-block;
      margin: 20px;
      padding: 15px 30px;
      background-color: #4CAF50;
      color: white;
      font-size: 18px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <h1>Welcome, Admin!</h1>

  <button class="button" onclick="goToStations()">Stations</button>
  <button class="button" onclick="goToRoutes()">Routes</button>
  <button class="button" onclick="goToRequests()">Requests</button>

  <script>
    function goToStations() {
      window.location.href = "/adminstations"; // Replace "/stations.html" with the actual URL of the stations page
    }

    function goToRoutes() {
      window.location.href = "/adminroutes"; // Replace "/routes.html" with the actual URL of the routes page
    }

    function goToRequests() {
      window.location.href = "/requests.html"; // Replace "/requests.html" with the actual URL of the requests page
    }
  </script>
</body>
</html>
