<!DOCTYPE html>
<html>
<head>
  <head>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <style>
      body {
        background: url('metro.jpeg') center/cover fixed;
        backdrop-filter: blur(5px);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .navbar-inverse .navbar-nav > li > a {
        color: #fff;
      }

      .navbar-inverse .navbar-nav > li > a:hover,
      .navbar-inverse .navbar-nav > li > a:focus {
        background-color: green;
      }

      .login-box {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        max-width: 400px;
        width: 100%;
        font-family: 'Times New Roman', Times, serif;
      }

      .login-box h1 {
        text-decoration: underline;
      }

      .btn-login {
        background-color: green;
      }
      
      .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
      }
    </style>
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  </head>
</head>
<body>
  <script>
    $(document).ready(function() {
      $("#submit").click(function() {
        const email = $('#email').val();
        const password = $('#password').val();

        const data = {
          email,
          password,
        };

        $.ajax({
          type: "POST",
          url: '/api/v1/user/login',
          data,
          success: function(serverResponse) {
            if (serverResponse=="login successful Admin") {
                console.log(serverResponse);
              window.location.href = '/admin';
            }
            else if (serverResponse=="login successful User") {
              window.location.href = '/userdashboard';
            }
            else {
              alert(serverResponse);
            }
          },
          error: function(errorResponse) {
            if (errorResponse) {
              alert(`User login error: ${errorResponse.responseText}`);
            }
          }
        });
      });
    });
  </script>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/" style="background-color: green;">Home</a></li>
      </ul>
    </div>
  </nav>

  <div class="login-box">
    <h1 style="font-family: 'Times New Roman', Times, serif; text-decoration: underline;">Login</h1>
    <form class="form-horizontal" style="width: 100%;">
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="">
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <input id="submit" name="submit" type="button" value="Login" class="btn btn-primary btn-login">
          Need to register? click <a href="/register">here.</a>
        </div>
      </div>
    </form>
  </div>
</body>
</html>