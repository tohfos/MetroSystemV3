<!DOCTYPE html>
<html>
<head>
  <title>Metro Subscription Selection</title>
  <style>
    /* Add the styles from frontend 1 */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background: url('metro.jpeg') no-repeat center center fixed;
      background-size: cover;
      backdrop-filter: blur(4px);
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      background-color: rgba(255, 255, 255, 0.6);
      border-radius: 8px;
      padding: 40px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(4px);
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .form-group input[type="text"],
    .form-group input[type="number"],
    .form-group select {
      width: 100%;
      padding: 8px;
      font-size: 16px;
    }

    .button {
      padding: 10px 20px;
      font-size: 16px;
      color: #fff;
      background-color: #4CAF50;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .button:hover {
      background-color: #45a049;
    }

    .separator {
      margin: 40px 0;
      border-top: 1px solid #ccc;
    }

    .payment-success {
      color: green;
      font-weight: bold;
      text-align: center;
      margin-top: 20px;
    }

    .payment-failure {
      color: red;
      font-weight: bold;
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Purchase a Subscription</h1>

    <div class="form-group">
      <label for="subscription">Subscription</label>
      <select id="subscription" required>
        <option value="" disabled selected>Select your subscription</option>
        <option value="Monthly">Monthly</option>
        <option value="Quarterly">Quarterly</option>
        <option value="Annually">Annually</option>
      </select>
    </div>

    <div class="form-group">
      <label for="creditCardNumber">Credit Card Number</label>
      <input type="text" id="creditCardNumber" placeholder="Enter your credit card number" required>
    </div>

    <div class="form-group">
      <label for="nameOnCard">Name on Card</label>
      <input type="text" id="nameOnCard" placeholder="Enter the name on your card" required>
    </div>

    <div class="form-group">
      <label for="cvv">CVV</label>
      <input type="text" id="cvv" placeholder="Enter the CVV code" required>
    </div>

    <div class="form-group">
      <label for="amount">Amount</label>
      <input type="number" id="amount" placeholder="Enter the amount" required>
    </div>

    <button class="button" id="purchaseButton">Purchase</button>

    <div id="purchaseMessage" style="display: none; text-align: center; margin-top: 20px;"></div>

    <script>
      document.getElementById("purchaseButton").addEventListener("click", function() {
        var subscription = document.getElementById("subscription").value;
        var creditCardNumber = document.getElementById("creditCardNumber").value;
        var nameOnCard = document.getElementById("nameOnCard").value;
        var cvv = document.getElementById("cvv").value;
        var amount = document.getElementById("amount").value;

        // Check for missing fields
        if (subscription === "" || creditCardNumber === "" || nameOnCard === "" || cvv === "" || amount === "") {
          document.getElementById("purchaseMessage").textContent = "Please fill in all fields.";
          document.getElementById("purchaseMessage").style.display = "block";
          return;
        }

        // Send data to the backend using fetch or other methods
        fetch("/api/v1/payment/subscription", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            subType: subscription.toLowerCase(),
            creditCardNumber: creditCardNumber,
            holderName: nameOnCard,
            cvv: cvv,
            amount: amount,
            zoneId: 2 // Replace with the correct zone ID
          })
        })
        .then(function(response) {
          if (response.ok) {
            // Handle successful purchase
            document.getElementById("purchaseMessage").textContent = "Subscription purchased successfully.";
            document.getElementById("purchaseMessage").style.display = "block";
          } else {
            // Handle purchase error
            console.error('Failed to purchase subscription');
            // Show error message to the user
          }
        })
        .catch(function(error) {
          // Handle network or other errors
          console.error('Error:', error);
          // Show error message to the user
        });
      });
    </script>
  </div>
</body>

</html>
